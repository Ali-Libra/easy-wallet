{
  "manifest_version": 3,
  "name": "Easy Wallet Extension",
  "version": "1.0",
  "description": "Built with Next.js",
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "dogdog.png",
      "48": "dogdog.png",
      "128": "dogdog.png"
    }
  },
  "permissions": [],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["<all_urls>"]
}
